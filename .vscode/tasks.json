{
    "version": "2.0.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "runner": "terminal",
    "tasks": [
        {
            "taskName": "install",
            "args": [
                "install"
            ]
        },
        {
            "taskName": "update",
            "args": [
                "update"
            ]
        },
        {
            "taskName": "test",
            "args": [
                "run",
                "test"
            ],
            "isTestCommand": true
        },
        {
            "taskName": "build",
            "args": [
                "run",
                "build"
            ],
            "isBuildCommand": true
        },
        {
            "customize": "vscode.npm.run test",
            "taskName": "npm: run test",
            "problemMatcher": []
        }
    ]
}
